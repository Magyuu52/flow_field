<section id="speakers">
  <div class="container aos-init aos-animate" data-aos="fade-up">
    <div class="section-header">
      <h2 class="mt-5">Spot Index</h2>
      <p>投稿スポット一覧</p>
    </div>
    <section id="subscribe">
      <div class="container aos-init aos-animate" data-aos="zoom-in">
        <%= form_with(url: search_posts_path, local: true, method: :get ) do |f| %>
          <div class="row justify-content-center">
            <div class="col-lg-6 col-md-10 d-flex">
              <%= f.text_field :keyword, class:"form-control border border-dark-subtle", placeholder:"投稿者、スポット名、タイトル、住所" %>
              <%= f.button "検索", :type => "submit", class:"ms-2" %>
            </div>
          </div>
        <% end %>
      </div>
    </section>
    <h3>スポット件数: <%= @posts_count %>件</h3>
    <div class="row">
      <% @posts.each do |post| %>
        <div class="col-lg-4 col-md-6">
          <div class="post-details-top">
            <%= link_to user_path(post.user) do %>
              <div class="d-flex">
                <% if post.user.image.attached? %>
                  <%= image_tag(rails_blob_path(post.user.image),:size => "40x40",class:"rounded-circle") %>
                <% else %>
                  <%= image_tag("default_user.png", :size => "40x40") %>
                <% end %>
                <p><%= post.user.name %></p>
              </div>
            <% end %>
          </div>
          <div class="speaker aos-init aos-animate" data-aos="fade-up" data-aos-delay="100">
            <%= link_to post do %>
              <% if post.spot_image.attached? %>
                <%= image_tag(rails_blob_path(post.spot_image), class:"img-fluid") %>
              <% else %>
                <%= image_tag("default_spot.jpg", class:"img-fluid") %>
              <% end %>
              <div class="details">
                <h3><%= post.title %></h3>
                <p><%= post.spot_name %></p>
                <div class="social">
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
