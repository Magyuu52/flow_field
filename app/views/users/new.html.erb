<section id="form" class="section-bg">
  <div class="container aos-init aos-animate" data-aos="fade-up">
    <div class="section-header">
      <h2 class="mt-5">Create New User</h2>
      <p>ユーザー新規登録</p>
    </div>
    <div class="form form-content-area">
      <%= form_with model: @user, url: users_path do |f| %> 
        <div class="row">
          <div class="form-group col-md-6">
            <%= f.label :name, "ユーザー名(20文字まで)", class:"mb-3" %>
            <%= f.text_field :name, class:"form-control", placeholder:"ユーザー名を入力" %>
            <p class="mt-1 nessessory-column">※ 入力必須項目です</p>
          </div>
          <div class="form-group col-md-6 mt-3 mt-md-0">
            <%= f.label :email, "メールアドレス", class:"mb-3" %>
            <%= f.text_field :email, class:"form-control", placeholder:"メールアドレスを入力（name@example.com）" %>
            <p class="mt-1 nessessory-column">※ 入力必須項目です</p>
          </div>
        </div>
        <div class="form-group mt-3">
          <%= f.label :password, "パスワード", class:"mb-3" %>
          <%= f.password_field :password, class:"form-control", placeholder:"パスワードを入力" %>
          <p class="mt-1 nessessory-column">※ 入力必須項目です</p>
        </div>
        <div class="form-group mt-3">
          <%= f.label :introduction, "自己紹介(100文字まで)", class:"mb-3" %>
          <%= f.text_area :introduction, class:"form-control", rows:"4", placeholder:"自己紹介を入力" %>
        </div>
        <div class="text-center mt-4">
          <%= f.button "新規登録をする", :type => "submit" %>
        </div>
      <% end %>
    </div>
    <p class="mt-5 mb-1">※すでにアカウントをお持ちの方は<%= link_to "ログイン", login_path %>をご利用ください</p>
    <p class="mt-1">※アカウントを作成せずに始めたい方は<%= link_to "ゲストログイン", guest_login_path, data: { turbo_method: :post } %>をご利用ください</p>
  </div>
</section>