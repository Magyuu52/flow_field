<section id="speakers-details">
  <div class="container">
    <div class="section-header">
      <h2 class="mt-5">User Profile</h2>
      <p>ユーザープロフィール</p>
    </div>
    <div class="d-flex justify-content-between">
      <% if @user.image.attached? %>
        <%= image_tag(rails_blob_path(@user.image),:size => "90x90",class:"rounded-circle") %>
      <% else %>
        <%= image_tag("default_user.png", :size => "90x90") %>
      <% end %>
      <% if @user.id == @current_user.id %>
        <%= link_to "プロフィール編集", edit_user_path, class: "btn btn-danger py-2 px-4"%>
      <% else %>
        <% if @current_user.following?(@user) %>
          <%= link_to "フォロー済み", user_relationships_path(@user.id), data: { "turbo-method": :delete } %>
        <% else %>
          <%= link_to "フォローする", user_relationships_path(@user.id), data: { "turbo-method": :post } %>
        <% end %>
      <% end %>
    </div>
    <div class="row">
      <div class="col-md-6">
        <div class="details">
          <h2 class="mt-3"><%= @user.name %></h2>
          <p><%= @user.introduction %></p>
          <p>フォロー数: <%= @user.followings.count %></p>
          <p>フォロワー数: <%= @user.followers.count %></p>
          <h3>経験年数</h3>
          <% if @user.experience == "設定しない" || @user.experience == nil %>
            <h2>未登録</h2>
          <% else %>
            <h2><%= @user.experience %></h2>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
<section id="schedule" class="section-with-bg">
  <div class="container aos-init aos-animate" data-aos="fade-up">
    <ul class="nav nav-tabs aos-init aos-animate" role="tablist" data-aos="fade-up" data-aos-delay="100">
      <li class="nav-item" role="presentation">
        <a class="nav-link active" href="#day-1" role="tab" data-bs-toggle="tab" aria-selected="true">Day 1</a>
      </li>
      <li class="nav-item" role="presentation">
        <a class="nav-link" href="#day-2" role="tab" data-bs-toggle="tab" aria-selected="false" tabindex="-1">Day 2</a>
      </li>
    </ul>
    <div class="tab-content row justify-content-center aos-init aos-animate" data-aos="fade-up" data-aos-delay="200">
      <!-- Post List 1 -->
      <div role="tabpanel" class="col-lg-9 tab-pane fade show active" id="day-1">
        <% @user.posts.each do |post| %>
          <div class="row schedule-item">
            <div class="col-md-2">
              <time><%= post.created_at %></time>
            </div>
            <div class="col-md-10">
              <div class="speaker">
                <% if post.spot_image.attached? %>
                  <%= image_tag(rails_blob_path(post.spot_image), class:"img-fluid") %>
                <% else %>
                  <%= image_tag("default_spot.jpg", class:"img-fluid") %>
                <% end %>
              </div>
              <div class="d-flex justify-content-between align-items-end">
                <div class="contents-area">
                  <h4><%= post.title %></h4>
                  <p><%= post.content %></p>
                </div>
                <%= link_to "スポット詳細へ", post_path(post), class:"btn btn-danger px-2" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      <!-- End Post List 1 -->

      <!-- Post List 2 -->
      <div role="tabpanel" class="col-lg-9  tab-pane fade" id="day-2">
        <% @likes.each do |like| %>
          <% post = Post.find_by(id: like.post_id) %>
          <div class="row schedule-item">
            <div class="col-md-2">
              <time><%= post.created_at %></time>
            </div>
            <div class="col-md-10">
              <div class="speaker">
                <% if post.spot_image.attached? %>
                  <%= image_tag(rails_blob_path(post.spot_image), class:"img-fluid") %>
                <% else %>
                  <%= image_tag("default_spot.jpg", class:"img-fluid") %>
                <% end %>
              </div>
              <div class="d-flex justify-content-between align-items-end">
                <div class="contents-area">
                  <h4><%= post.title %></h4>
                  <p><%= post.content %></p>
                </div>
                <%= link_to "スポット詳細へ", post_path(post), class:"btn btn-danger px-2" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      <!-- End Post List 2 -->
    </div>
  </div>
</section>
